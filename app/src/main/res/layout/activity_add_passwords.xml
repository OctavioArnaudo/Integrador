<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterPasswordActivity">

    <!-- Red Background View -->
    <View
        android:id="@+id/view_red_background"
        android:layout_width="wrap_content"
        android:layout_height="365dp"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <!-- Main Card View -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_main"
        android:layout_width="329dp"
        android:layout_height="595dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Header Card View -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_header"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp">

            <!-- Header Content Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Back Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_back_save"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/red"
                    android:contentDescription="@string/back_to_previous_screen"
                    android:elevation="12dp"
                    app:cornerRadius="30dp"
                    app:icon="@drawable/arrow"
                    app:iconGravity="start"
                    app:iconSize="30dp"
                    app:iconTint="@color/white"
                    tools:ignore="MissingConstraints" />

                <!-- Header Title -->
                <TextView
                    android:id="@+id/text_view_header_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:gravity="center_horizontal"
                    android:text="@string/save_password"
                    android:textColor="@color/text_accessibility"
                    android:textSize="24sp"
                    android:textStyle="italic" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Input Fields Layout -->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="411dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- Name Input Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/name_hint"
                android:textColor="@color/grey_light"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusTopStart="25dp"
                app:boxStrokeColor="@color/grey_light"
                app:hintTextColor="@color/grey_light"
                app:startIconContentDescription="@string/name_icon_description"
                app:startIconDrawable="@drawable/globe"
                app:startIconTint="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/black"
                    app:hintTextColor="@color/grey_light" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Username Input Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/username_hint"
                android:textColor="@color/grey_light"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusTopStart="25dp"
                app:boxStrokeColor="@color/grey_light"
                app:hintTextColor="@color/grey_light"
                app:startIconContentDescription="@string/email_icon_description"
                app:startIconDrawable="@drawable/email"
                app:startIconTint="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/black"
                    app:hintTextColor="@color/grey_light" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Field with Generate Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    tools:ignore="UselessParent">

                    <!-- Password Input Field -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="@string/password_hint"
                        android:textColor="@color/grey_light"
                        app:boxCornerRadiusBottomEnd="25dp"
                        app:boxCornerRadiusBottomStart="25dp"
                        app:boxCornerRadiusTopEnd="25dp"
                        app:boxCornerRadiusTopStart="25dp"
                        app:boxStrokeColor="@color/grey_light"
                        app:endIconContentDescription="@string/password_toggle_description"
                        app:endIconTint="@color/grey"
                        app:endIconMode="password_toggle"
                        app:hintTextColor="@color/grey_light"
                        app:startIconContentDescription="@string/password_generate_description"
                        app:startIconDrawable="@drawable/lock_solid"
                        app:startIconTint="@color/red">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_password"
                            android:layout_width="255dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/black"
                            app:hintTextColor="@color/grey_light" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Generate Button -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_view_generate_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="260dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/circle_plus"
                        android:contentDescription="@string/generate_password_description"
                        app:tint="@android:color/holo_green_dark" />
                </FrameLayout>

            </LinearLayout>

            <!-- URL Input Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/url_hint"
                android:textColor="@color/grey_light"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusTopStart="25dp"
                app:boxStrokeColor="@color/grey_light"
                app:hintTextColor="@color/grey_light"
                app:startIconContentDescription="@string/url_icon_description"
                app:startIconDrawable="@drawable/url"
                app:startIconTint="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/black"
                    app:hintTextColor="@color/grey_light" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Description Input Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/description_hint"
                android:textColor="@color/grey_light"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusTopStart="25dp"
                app:boxStrokeColor="@color/grey_light"
                app:hintTextColor="@color/grey_light"
                app:startIconContentDescription="@string/description_icon_description"
                app:startIconDrawable="@drawable/description"
                app:startIconTint="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_description"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    app:hintTextColor="@color/grey_light" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="231dp"
        android:layout_height="61dp"
        android:layout_marginTop="530dp"
        android:backgroundTint="@color/red"
        android:text="@string/save_button_text"
        android:textColor="@color/white"
        app:cardElevation="15dp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card_main"
        app:layout_constraintVertical_bias="0.21"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
