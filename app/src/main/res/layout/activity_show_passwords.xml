<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ShowPasswordsActivity">

    <View
        android:id="@+id/viewRedBackground"
        android:layout_width="wrap_content"
        android:layout_height="365dp"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewMain"
        android:layout_width="336dp"
        android:layout_height="679dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddPassword"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="95dp"
            android:contentDescription="@string/add_new_password"
            android:text="@string/add"
            android:textColor="@color/white"
            app:cardElevation="15dp"
            app:cornerRadius="30dp"
            tools:ignore="TextContrastCheck" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewSearch"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnSearch"
                    style="@android:style/Widget.ImageButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/search"
                    app:srcCompat="@android:drawable/ic_menu_search"
                    app:tint="@color/red" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutSearch"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextSearch"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/btnMenu"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@string/access_submenu"
                    android:src="@drawable/ellipsis_vertical"
                    app:tint="@color/grey" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="453dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="155dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewNoPasswords"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:contentDescription="@string/no_passwords"
                app:srcCompat="@drawable/circle_exclamation_solid"
                app:tint="@color/sign_accessibility" />

            <TextView
                android:id="@+id/txtNoPasswords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/no_passwords"
                android:textColor="@color/sign_accessibility"
                android:textSize="24sp" />

            <ScrollView
                android:id="@+id/scrollViewPasswords"
                android:layout_width="match_parent"
                android:layout_height="427dp"
                android:contentDescription="@string/todo">

                <TableLayout
                    android:id="@+id/tableLayoutPasswords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">
                    <!-- Table rows will be added dynamically -->
                </TableLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/imageViewScrollIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="40dp"
                android:src="@drawable/arrow_down_solid"
                android:visibility="visible"
                app:tint="@color/grey_light"
                android:contentDescription="@string/todo" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
